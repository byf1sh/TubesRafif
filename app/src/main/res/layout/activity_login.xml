<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/backgroundsiang"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/orgkemping"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:src="@drawable/orglagikemping"
        app:layout_constraintBottom_toTopOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/poppinbold"
        android:gravity="start"
        android:hint="Username"
        android:textSize="12sp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orgkemping" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/poppinbold"
        android:gravity="start"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textSize="12sp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username" />

    <CheckBox
        android:id="@+id/rememberme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/cekbox"
        android:layout_marginStart="60dp"
        android:paddingLeft="8sp"
        android:text="Remember me"
        android:textSize="12sp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/pass"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:gravity="start"
        android:text="By signing up, you agree to our"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rememberme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/terms"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="679dp" />


    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and conditions"
        android:textSize="12sp"
        android:textColor="@color/biru"
        android:fontFamily="@font/raleway"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintEnd_toStartOf="@id/and"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login"/>

    <TextView
        android:id="@+id/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and"
        android:textSize="12sp"
        android:fontFamily="@font/raleway"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/terms"
        app:layout_constraintEnd_toStartOf="@id/privacy"
        app:layout_constraintBottom_toTopOf="@id/login"/>


    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textColor="@color/biru"
        app:layout_constraintBottom_toTopOf="@id/login"
        app:layout_constraintStart_toEndOf="@id/and"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:fontFamily="@font/raleway" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="12sp"
        android:fontFamily="@font/raleway"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/privacy"/>


    <Button
        android:id="@+id/login"
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppinbold"
        android:gravity="center"
        android:hint="Log In"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/and"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
