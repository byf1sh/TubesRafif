<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="136dp"
    app:layout_anchorGravity="center"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/deck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/availabledeck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/availabledeck"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/deck_color"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/deck_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/apalah"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="47dp"
            app:layout_constraintEnd_toEndOf="parent">


            <ImageView
                android:id="@+id/pic_deck"
                android:layout_width="230dp"
                android:layout_height="210dp"
                android:src="@drawable/tent"
                app:layout_constraintBottom_toBottomOf="@id/apalah"
                app:layout_constraintEnd_toEndOf="@id/apalah"
                app:layout_constraintStart_toStartOf="@id/apalah"
                app:layout_constraintTop_toTopOf="@id/apalah" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/title_deck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="35dp"
            android:fontFamily="@font/poppinbold"
            android:text="No deck"
            android:textStyle="bold"
            android:textColor="@color/putih"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/apalah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/avail_deck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Harga"
            android:textColor="@color/hijau"
            android:textSize="17sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>