            <ImageView
                android:id="@+id/campfire_dbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/campfire"
                app:layout_constraintStart_toEndOf="@id/diningtable_dbd"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/campfiretxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway"
                android:text="Campfire"
                app:layout_constraintStart_toStartOf="@id/campfire_dbd"
                app:layout_constraintTop_toBottomOf="@id/campfire_dbd"
                app:layout_constraintEnd_toEndOf="@id/campfire_dbd"/>

            <ImageView
                android:id="@+id/bbqgrill_dbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="64dp"
                android:src="@drawable/bbqgrill_dbd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/campfire_dbd"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bbqgrilltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway"
                android:text="BBQ Grill"
                app:layout_constraintEnd_toEndOf="@id/bbqgrill_dbd"
                app:layout_constraintStart_toStartOf="@id/bbqgrill_dbd"
                app:layout_constraintTop_toBottomOf="@id/bbqgrill_dbd" />

            <ImageView
                android:id="@+id/hammock_dbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:src="@drawable/hammock_dbd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/toilettxt"
                app:layout_constraintStart_toStartOf="@+id/toilettxt"
                app:layout_constraintTop_toBottomOf="@+id/toilettxt" />

            <TextView
                android:id="@+id/hammocktxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway"
                android:text="Hammock"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/hammock_dbd"
                app:layout_constraintStart_toStartOf="@id/hammock_dbd"
                app:layout_constraintTop_toBottomOf="@id/hammock_dbd" />

            <ImageView
                android:id="@+id/playpool_dbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:src="@drawable/playpool_dbd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.206"
                app:layout_constraintStart_toEndOf="@+id/hammock_dbd"
                app:layout_constraintTop_toBottomOf="@+id/diningtabletxt" />

            <TextView
                android:id="@+id/playpooltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway"
                android:text="Play Pool"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/playpool_dbd"
                app:layout_constraintStart_toStartOf="@id/playpool_dbd"
                app:layout_constraintTop_toBottomOf="@id/playpool_dbd" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>