<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/siangsiang"
    tools:context=".SignupActivity">


    <ImageView
        android:id="@+id/orglagikemping"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:src="@drawable/orgcamping"
        app:layout_constraintBottom_toTopOf="@id/emailasd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/emailasd"
        android:layout_width="300sp"
        android:layout_height="39dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/poppinbold"
        android:gravity="start"
        android:hint="Email"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:textSize="13sp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orglagikemping" />

    <EditText
        android:id="@+id/username"
        android:layout_width="300sp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/poppinbold"
        android:gravity="start"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:textSize="13sp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailasd" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300sp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/poppinbold"
        android:gravity="start"
        android:hint="Password"
        android:paddingLeft="14dp"
        android:paddingTop="12dp"
        android:textSize="13sp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@id/contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="300sp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/poppinbold"
        android:gravity="start"
        android:hint="Contact Number"
        android:paddingLeft="13dp"
        android:paddingTop="12dp"
        android:textSize="13sp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintBottom_toTopOf="@id/textView"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/raleway"
        android:gravity="start"
        android:text="By signing up, you agree to our"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact"
        app:layout_constraintBottom_toTopOf="@id/and"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and conditions"
        android:textSize="12sp"
        android:textColor="@color/biru"
        android:fontFamily="@font/raleway"
        android:layout_marginStart="200dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintEnd_toStartOf="@id/and"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and"
        android:textSize="12sp"
        android:fontFamily="@font/raleway"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toTopOf="@id/signup_button"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/terms"
        app:layout_constraintEnd_toStartOf="@id/privacy"/>


    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:textColor="@color/biru"
        app:layout_constraintStart_toEndOf="@id/and"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="200dp"
        android:textSize="12sp"
        android:fontFamily="@font/raleway" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="12sp"
        android:fontFamily="@font/raleway"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/privacy"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppinbold"
        android:gravity="center"
        android:hint="Sign Up"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/and" />


</androidx.constraintlayout.widget.ConstraintLayout>